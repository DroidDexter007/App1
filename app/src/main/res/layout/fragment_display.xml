<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:elevation="4dp"
    android:paddingBottom="24dp"
    android:paddingTop="24dp"
    tools:context="com.example.subpraka.calapp.DisplayFragment">

    <ImageButton
        android:id="@+id/imb_delete"
        style="@style/ImageButtonDisplay"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:background="@color/windowBackground"
        android:src="@drawable/ic_clear_black_36dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        style="@style/ScrollViewDisplay"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_toEndOf="@+id/imb_delete"
        android:layout_toRightOf="@+id/imb_delete">

        <TextView
            android:id="@+id/display"
            style="@style/TextViewDisplay"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="end"
            android:textSize="50sp"
            tools:text="55+22" />

    </HorizontalScrollView>

</RelativeLayout>
